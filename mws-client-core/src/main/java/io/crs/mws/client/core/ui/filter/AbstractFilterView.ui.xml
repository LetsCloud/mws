<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui">

	<m:MaterialCollapsible accordion="false"
		marginTop="0" marginBottom="0">
		<!-- ITEM 1 -->
		<m:MaterialCollapsibleItem>
			<!-- A szűrő feltételeket megjelító és a lenyító valamint a felcsukó ikont 
				magába foglaló fejléc. -->
			<m:MaterialCollapsibleHeader
				ui:field="collapsibleHeader">
				<m:MaterialIcon iconType="FILTER_LIST" float="RIGHT"
					marginRight="0" />
			</m:MaterialCollapsibleHeader>

			<!-- A szűrő feltétekeket beállító komponenseket magába foglaló test -->
			<m:MaterialCollapsibleBody
				ui:field="collapsibleBody" paddingTop="15" paddingBottom="0"
				paddingLeft="15" paddingRight="15">
				<m:MaterialRow ui:field="controlPanel" />
			</m:MaterialCollapsibleBody>

		</m:MaterialCollapsibleItem>
	</m:MaterialCollapsible>
</ui:UiBinder> 