<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui">

	<ui:style>
	.block {
		display: block;
		padding: 10px;
		font-size: 16px !important;
	}
	</ui:style>

	<m:MaterialCard ui:field="materialCard" backgroundColor="ORANGE">
		<m:MaterialCardTitle ui:field="title" iconType="MORE_VERT"
			iconPosition="RIGHT" textColor="BLACK" addStyleNames="{style.block}" />
	</m:MaterialCard>
</ui:UiBinder> 