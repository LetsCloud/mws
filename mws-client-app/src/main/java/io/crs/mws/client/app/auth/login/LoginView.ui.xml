<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui">

	<!-- <ui:image field="backgImg" src="hu/hw/cloud/client/resources/img/background.jpg" 
		/> -->

	<ui:style>
	/* @url backgroundImgUrl backgroundImg; */
	.container {
		height: 100%;
		margin-bottom: 0px;
		padding: 5%;
	}
	
	.brand {
		/*		margin-bottom: 15%; */
		padding-top: 5%;
		padding-bottom: 5%;
		text-align: center;
		font-size: 2rem;
		font-weight: 800;
		color: white;
		line-height: normal !important;
	}
	
	.brand span {
		font-weight: 200;
	}
	
	.caption {
		color: white;
		font-size: 1.5rem;
		text-align: center;
		padding-top: 5%;
		padding-bottom: 5%;
	}
	
	.fieldPanel {
		background: white;
		padding: 6%;
	}
	
	.imgProfile {
		margin-top: -120px;
		width: 40%;
		margin-left: 30%;
		border: 5px solid #fff;
	}
	
	.rowAction {
		margin-top: 20px;
	}
	</ui:style>


	<ui:with field="i18n"
		type="io.crs.mws.client.core.i18n.CoreMessages" />

	<ui:with field="tokens" type="io.crs.mws.client.app.NameTokens" />

	<m:MaterialRow backgroundColor="GREY_DARKEN_2"
		addStyleNames="{style.container}">

		<m:MaterialColumn grid="l6 m8 s12" offset="l3 m2">

			<m:MaterialPanel ui:field="headerPanel" shadow="1">

				<g:HTMLPanel ui:field="brandPanel"
					addStyleNames="{style.brand}" />

				<m:MaterialLabel text="{i18n.loginCaption}"
					addStyleNames="{style.caption}" />

				<m:MaterialPanel addStyleNames="{style.fieldPanel}">

					<m:MaterialTextBox ui:field="email"
						type="EMAIL" label="{i18n.loginUsername}" />

					<m:MaterialTextBox ui:field="password"
						type="PASSWORD" label="{i18n.loginPassword}" />

					<m:MaterialButton ui:field="submit" waves="LIGHT"
						text="{i18n.loginSubmit}" width="100%" /> <!-- backgroundColor="ORANGE" -->

					<m:MaterialRow addStyleNames="{style.rowAction}">
						<m:MaterialColumn grid="s12 m6 l6">
							<m:MaterialCheckBox ui:field="rememberMe"
								text="{i18n.loginKeepMe}" />
						</m:MaterialColumn>

						<m:MaterialColumn grid="s12 m6 l6"
							textAlign="RIGHT">
							<m:MaterialLink
								targetHistoryToken="{tokens.getSignup}"
								text="{i18n.loginCreate}" textColor="GREY"
								iconType="ADD_CIRCLE_OUTLINE" iconPosition="RIGHT" />
						</m:MaterialColumn>
					</m:MaterialRow>

					<m:MaterialRow addStyleNames="{style.rowAction}">
						<m:MaterialAnchorButton ui:field="googleLogin"
							waves="LIGHT" customIconType="fab fa-google"
							text="Login with Google" width="100%" />
					</m:MaterialRow>
				</m:MaterialPanel>
			</m:MaterialPanel>
		</m:MaterialColumn>
	</m:MaterialRow>
</ui:UiBinder>