<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui">

	<ui:style>
	.ol-popup {
		position: absolute;
		background-color: white;
		-webkit-filter: drop-shadow(0 1px 4px rgba(0, 0, 0, 0.2));
		filter: drop-shadow(0 1px 4px rgba(0, 0, 0, 0.2));
		padding: 15px;
		border-radius: 10px;
		border: 1px solid #cccccc;
		bottom: 12px;
		left: -100px;
		min-width: 200px;
	}
	
	.ol-popup:after, .ol-popup:before {
		top: 100%;
		border: solid transparent;
		content: " ";
		height: 0;
		width: 0;
		position: absolute;
		pointer-events: none;
	}
	
	.ol-popup:after {
		border-top-color: white;
		border-width: 10px;
		left: 98px;
		margin-left: -10px;
	}
	
	.ol-popup:before {
		border-top-color: #cccccc;
		border-width: 11px;
		left: 98px;
		margin-left: -11px;
	}
	</ui:style>

	<m:MaterialPanel addStyleNames="{style.ol-popup}">
		<g:Label text="Create Spot" />
		<m:MaterialTextBox ui:field="spotNameBox"
			label="Spot Name" class="input-field" />
		<m:MaterialLink ui:field="saveLink" text="Save"
			float="LEFT" />
		<m:MaterialLink ui:field="closeLink" text="Close"
			float="RIGHT" />
	</m:MaterialPanel>
</ui:UiBinder> 